@section scripts {
    @Scripts.Render("~/bundles/app")
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Room Bookings</h1>
</div>

<div class="btn-group btn-group-justified">
    <a href="#" class="btn btn-info" onclick="parent.location = 'http://localhost:56128/Shared/ManageBookings'">Bookings</a>
    <a href="#" class="btn btn-info" onclick="parent.location = 'http://localhost:56128/Shared/ManageRooms'">Rooms</a>
    <a href="#" class="btn btn-info" onclick="parent.location = 'http://localhost:56128/Shared/ManagePayments'">Payments</a>
</div>

<div class="col-lg-12">&nbsp;</div>
<div class="col-lg-12">&nbsp;</div>

<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Payments Made</h2>
        </div>
        <div class="panel-body">
            <ul class="list-unstyled" data-bind="foreach: payments">
                <li>
                    Payment&nbsp;ID:&nbsp;<span data-bind="text: PaymentId"></span><br>
                    Booking&nbsp;ID:&nbsp;<span data-bind="text: BookingId"></span><br>
                    First&nbsp;Name:&nbsp;<span data-bind="text: FirstName"></span><br>
                    Last&nbsp;Name:&nbsp;<span data-bind="text: LastName"></span><br>
                    Billing&nbsp;Address:&nbsp;<span data-bind="text: BillingAddress"></span><br>
                    City:&nbsp;<span data-bind="text: BillingCity"></span><br>
                    Postal&nbsp;Code:&nbsp;<span data-bind="text: BillingPostal"></span><br>
                    Email:&nbsp;<span data-bind="text: BillingEmail"></span><br>
                    Name&nbsp;On&nbsp;Card:&nbsp;<span data-bind="text: NameOnCard"></span><br>
                    Card&nbsp;No.:&nbsp;<span data-bind="text: CardNo"></span><br>
                    Expiry&nbsp;Date:&nbsp;<span data-bind="text: ExpiryMonth"></span>/<span data-bind="text:ExpiryYear"></span><br>
                    CVC:&nbsp;<span data-bind="text: Cvc"></span><br>
                    Coupon&nbsp;Code:&nbsp;<span data-bind="text: CouponCode"></span>
                  
                    <hr />
                    <div class="col-sm-12">

                        <span><button class="btn btn-danger" data-bind="click: $parent.deletePayment" onclick="alert('Deleted')">Delete</button></span>
                        <span></span>
                        <span><button class="btn btn-default" data-bind="click: $parent.populatePaymentsForUpdate">Edit</button></span>


                        <hr />
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
</div>


<div style="position:fixed" class="col-md-5 col-md-offset-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title"><strong>Payment Details</strong></h2>
        </div>

        <div class="panel-body">

            <div class="form-group" data-bind="with: newPayment">

                <label for="inputFirstName" class="col-sm-4 control-label">First&nbsp;Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputFirstName" data-bind="value:FirstName" />
                </div>

                <label for="inputLastName" class="col-sm-4 control-label">Last&nbsp;Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputLastName" data-bind="value:LastName" />
                </div>

                <label for="inputBillingAddress" class="col-sm-4 control-label">Address</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputBillingAdress" data-bind="value:BillingAddress" />
                </div>

                <label for="inputBillingCity" class="col-sm-4 control-label">City</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputBillingCity" data-bind="value:BillingCity" />
                </div>

                <label for="inputBillingPostal" class="col-sm-4 control-label">Postal&nbsp;Code</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="inputBillingPostal" data-bind="value:BillingPostal" />
                </div>

                <label for="inputBillingEmail" class="col-sm-4 control-label">Email&nbsp;Address</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="inputCheckOutDate" data-bind="value:BillingEmail" />
                </div>

                <label for="inputNameOnCard" class="col-sm-4 control-label">Cardholder&nbsp;Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputNameOnCard" data-bind="value:NameOnCard" />
                </div>

                <label for="inputCardNo" class="col-sm-4 control-label">Card&nbsp;No.</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputCardNo" data-bind="value:CardNo" />
                </div>

                <label for="inputExpiryMonth" class="col-sm-4 control-label">Expiry&nbsp;Month</label>
                <div class="col-sm-8">
                    <input type="number" min="01" max="12" class="form-control" id="inputExpiryMonth" data-bind="value:ExpiryMonth" />
                </div>

                <label for="inputExpiryYear" class="col-sm-4 control-label">Expiry&nbsp;Year</label>
                <div class="col-sm-8">
                    <input type="number" min="16" max="25" class="form-control" id="inputExpiryYear" data-bind="value:ExpiryYear" />
                </div>

                <label for="inputCvc" class="col-sm-4 control-label">CVC</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="inputCvc" data-bind="value:Cvc" />
                </div>

                <label for="inputCoupnCode" class="col-sm-4 control-label">Coupon&nbsp;Code</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="InputCouponCode" data-bind="value:CouponCode" />
                </div>

                <div>
                    <div class=" col-lg-12">&nbsp;</div>
                    <div class="col-sm-12">
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-12">
                        </div>
                        <div class="col-sm-8">
                        </div>

                        <div class="col-md-3">
                            <button class="btn btn-primary" data-bind="click: $parent.updatePayments" onclick="alert('Updated')">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







